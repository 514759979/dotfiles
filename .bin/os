#!/bin/zsh

[[ $HOST == my-pc ]] && {
    if (($# == 0)) {
        ~/.bin/wrun shutdown -s -t 0
    } elif (($1 == 1)) {
        ~/.bin/wrun shutdown -r -t 0
    }

    return
}

(($+commands[systemctl])) && {
    if (($# == 0)) {
        sudo systemctl poweroff
    } elif (($1 == 1)) {
        sudo systemctl reboot
    }

    return
}

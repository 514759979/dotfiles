#!/bin/bash

type systemctl &>/dev/null && {
    if [ $# = 0 ]; then
        sudo systemctl poweroff
    elif [ $1 = 1 ]; then
        sudo systemctl reboot
    fi
}

type shutdown &>/dev/null && {
    . ~/.myshrc
    if [ $# = 0 ]; then
        vmdown
        shutdown -s -t 0
    elif [ $1 = 1 ]; then
        vmdown
        shutdown -r -t 0
    fi
}

#!/bin/bash

[ "${1:0:4}" = "http" -o "${1:0:4}" = "www." ] && {
    wstart "$@"
    return
}

dir_name="$(dirname "$1")"
base_name="$(basename "$1")"

if [ "$dir_name" = "/" ]; then
    (cd /; wstart . &)
elif [ "$dir_name" = "/mnt" ]; then
    (cd /; wstart "$base_name:" &)
else
    shift 2>/dev/null
    (cd "$dir_name" && wstart "$base_name" "$@" &)
fi

Xcursor.theme: Premium
Xcursor.size: 32

!look and feel
xterm.termName: xterm-256color
xterm.geometry: 80x36
xterm*loginshell: true
xterm*cursorBlink: true
xterm*background:  black
xterm*foreground:  gray
xterm.borderLess: true
xterm.cursorBlink: true
xterm*colorUL: yellow
xterm*colorBD: white
 
!fix alt key input
xterm*eightBitInput: false
xterm*altSendsEscape: true
 
!print color and bold/underline attributes
xterm*printAttributes: 2
 
!mouse selecting to copy, win-v to paste
XTerm*VT100.Translations: #override \
    Super <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n
    <BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n
 
!font and locale
xterm*locale: true
xterm*utf8: true
xterm*utf8Title: true
xterm*fontMenu*fontdefault*Label: Default
xterm*faceName:YaHei Consolas Hybrid:pixelsize=16:antialias=True:charwidth=8
!xterm*boldFont:YaHei Consolas Hybrid:style=Bold:antialias=True:pixelsize=16
xterm*faceNameDoublesize:YaHei Consolas Hybrid:pixelsize=16:antialias=True:charwidth=8
xterm*xftAntialias:true
!xterm*cjkWidth:false
!xterm -en GBK : use GBK

*VT100*color0: black
*VT100*color1: red3
*VT100*color2: green3
*VT100*color3: yellow3
*VT100*color4: rgb:9c/9c/ff
*VT100*color5: magenta3
*VT100*color6: cyan3
*VT100*color7: gray90
*VT100*color8: gray50
*VT100*color9: red
*VT100*color10: green
*VT100*color11: yellow
*VT100*color12: rgb:5c/5c/ff
*VT100*color13: magenta
*VT100*color14: cyan
*VT100*color15: white

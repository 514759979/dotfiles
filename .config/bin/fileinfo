#!/bin/bash

if [ $# == 0 ]; then
    exit
fi

declare -l p=${1/*./}

ls "$1"
file "$1"
echo

case $p in
    pdf)
        pdftotext "$1" -
        ;;
    html|htm|mht|mhtml)
        w3m -dump "$1"
        ;;
    doc|docx)
        antiword "$1"
        ;;
    jpg|png|gif)
        gm identify "$1"
        ;;
    avi|mp4|mp3|aac|ogg|ogv|mts|mkv|asf|wmv|flv|f4v|dat|vob|iso|ts|rm|rmvb)
        ;;
    zip|rar|7z|xz|tgz|tbz2|tar|txz)
        als "$1"
        ;;
    *)
        cat "$1"
        ;;
esac

    vs() {
        local args
        [ "$#" -ge 1 ] && {
            args="MYSSH=1 bash -lc \"$@\""
        }

        ssh -tq $USER@127.0.0.1 -p 50247 "$args"

        ret=$?

        [ $ret -eq 255 -a $# -eq 0 ] && {
            /init /mnt/c/Program\ Files/Oracle/VirtualBox/VBoxManage.exe \
                startvm archlinux --type headless

            while true; do
                ssh -tq $USER@127.0.0.1 -p 50247 "$args"
                ret=$?
                [ $ret -eq 0 ] && {
                    break
                }
                sleep 1
            done
        }

        return $ret
    }


ac() {
    if [ $# = 1 ]; then
        awk '{print $'$1'}' $2
    elif [ $# = 2 ]; then
        awk -F$2 '{print $'$1'}' $3
    elif [ $# = 0 ]; then
        awk '{print $1}' $1
    fi
}


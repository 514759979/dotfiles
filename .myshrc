#!/bin/bash

export EDITOR=vim
export BROWSER=chromium
export PAGER='less -isrf'
export UNZIP='-O CP936'
eval `dircolors $HOME/.dir_colors`
export GREP_OPTIONS='--color=auto'
export GREP_COLOR='40;33;01'

# man color
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

gq() {
    geeqie $* 2>/dev/null &
}

imgresize() {
    gm mogrify -resize $1x$2 $3
}

cry() {
    if [ "t$1" = "t-d" ]; then
        openssl enc -aes-256-cbc -d -in $2 -out $3
    else
        openssl enc -aes-256-cbc -e -in $1 -out $2
    fi
}

st() {
    setsid $* &>/dev/null
}

c() {
    cd $1
    ls -F --color
}

cpu() {
    sudo cpupower frequency-set -f $1
}

zcd() {
    cd ~/.avfs$PWD/$@#
}

zback() {
    cd $(pwd|sed -e 's|^.*\.avfs||g' -e 's|/[^/]*#$||g')
}

aftp() {
    cd /home/osily/.avfs/#ftp:$1
}

vmvfs() {
    echo $PWD | grep '.avfs' &>/dev/null && cd
    convmvfs /mnt/fuse -o srcdir=$PWD,icharset=gb18030
    cd /mnt/fuse/
}

#atool
file_7z='\.rar\b|\.deb\b|\.iso\b'

al() {
    if echo $* |grep -Pi $file_7z >/dev/null; then
        als $* -F 7z
    else
        als $*
    fi
}

a() {
    if echo $* |grep -Pi $file_7z >/dev/null; then
        apack $* -F 7z
    else
        apack $*
    fi
}

au() {
    if echo $* |grep -Pi $file_7z >/dev/null; then
        arepack $* -F 7z
    else
        arepack $*
    fi
}

x() {
    if echo $* |grep -Pi $file_7z >/dev/null; then
        aunpack $* -F 7z
    else
        aunpack $*
    fi
}

#end atool

mcat() {
    markdown_py2 $1 -f /tmp/.html
    w3m /tmp/.html
}

wpa() {
    sudo ifconfig wlan0 up
    sudo wpa_supplicant -B -Dwext -i wlan0 -c /etc/wpa_supplicant/wpa_supplicant.conf$1
}

findx() {
    find -print0|xargs -0 $@
}

calc() {
    zmodload zsh/mathfunc 2>/dev/null
    echo $[$*]
}

gr() {
    grep --color "$*" -r .
}

b() {
    if [ $# = 0 ]; then
        cd ..
    else
        go_dir='.'
        for i in {1..$1}; do
            go_dir=$go_dir/..
        done
        cd $go_dir
    fi

    ls -F --color
}

opsqlite() {
    cd $HOME/.config/chromium
    find -print0|xargs -0 file|grep SQLite|sed 's/:.*$//g' > .opsqlite
    while read i; do
        sqlite3 $i vacuum
    done < .opsqlite
    rm .opsqlite
    cd -
}

gentoo() {
    if pgrep arch-chroot &>/dev/null; then
        sudo chroot $HOME/data/gentoo
    else
        sudo arch-chroot $HOME/data/gentoo
    fi
}

sl() {
    if pgrep ckermit &>/dev/null; then
        sll1 $1
    else
        sll2 $1
    fi
}

j() {
    sudo mount /dev/sd$1 /mnt
}

cwi() {
    cat `which $1`
}

vwi() {
    vim `which $1`
}

mm() {
    echo "$2" | mutt ly50247@126.com -s "$1" $3 $4
}

ba() {
    o "http://www.baidu.com/s?wd=$*"
}

y() {
    pacman-color -Ss $*
    cat ~/.myconf/aurlist | grep -P --color=always "$*" | awk -F'  ' '{print "aur/"$2" "$3" ["$1"] ("$4")\n    "$5}'
}

get_source() {
    wget http://mirrors.ustc.edu.cn/gentoo/distfiles/$1
}

if which yaourt &>/dev/null; then
    alias yy='yaourt'
    alias pi='yy -S'
    alias pia='yy -S --noconfirm'
    alias pli='yy -U'
    alias pud='yy -Syu --aur'
    alias psu='yy -Su --aur'
    alias pd='yy -Sw'
    alias pp='yy -Rcsn'
    alias psi='yy -Si'
    alias pq='yy -Q'
    alias pqi='yy -Qi'
    alias pqe='pacman -Qeq'
    alias psl='pkgfile -l'
    alias pql='yy -Ql'
    alias pso='pkgfile -v'
    alias pqo='yy -Qo'
    alias pqd='yy -Qdt'
    alias pqm='yy -Qqm'
    alias prd='yy -Rdd'
    alias pae='yy -D --asexplicit'
    alias pad='yy -D --asdeps'
    alias pcl='echo y"\n"y | yy -Scc'
    alias pbs='yy -G'
elif which emerge &>/dev/null; then
    alias y='eix'
    alias pi='sudo emerge -uDN'
    alias psu='sudo emerge -uDN world'
    alias pp='sudo emerge -c'
    alias prd='sudo emerge -C'
    alias pud='sudo emerge --sync'
    alias pd='sudo emerge -f'
    alias pql='equery f'
    alias pqo='equery b'
    alias pq='equery l'
    alias psi='emerge -pv'
    alias pli='sudo emerge -k'
elif which jumbo &>/dev/null; then
    alias y='jumbo search'
    alias pi='jumbo install'
    alias pp='jumbo remove'
    alias pql='jumbo list-files'
    alias pli='jumbo local-install'
    alias pud='jumbo update'
    alias pqd='jumbo check-unused'
fi


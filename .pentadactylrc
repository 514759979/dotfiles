set guioptions+=T
set hintkeys=hjklasdf
set nextpattern=下一,下页,后一,\bnext,(>|›|>>|››|»)$,更多,\bmore\b
set previouspattern=上一,上页,前一,\b(prev|previous)\b,^(<|‹|<<|‹‹|«)

map J gT
map K gt
map . d

map -m n,i,c <C-a> <Pass>
map -m n,i,c <C-c> <Pass>
map -m i,c <C-v> <Pass>
map -m i,c <C-x> <Pass>
map -m i,c <C-z> <Pass>
map -m n,i,c <C-w> <Pass>

set editor="vim -f"
:autocmd LocationChange '^file:' :normal! <C-z>
